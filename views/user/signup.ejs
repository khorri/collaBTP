<link rel="stylesheet" type="text/css" href="/styles/index.css"> 

	<div class="site-wrapper">
      <div class="site-wrapper-inner">

        <div class="cover-container">

          <div class="masthead clearfix">
            <div class="inner">
              <h3 class="masthead-brand"><img width="160px" src="images/cadroctet-pm-logo.png"></h3>
              <nav>
                <ul class="nav masthead-nav">
                  <li><a href="/">Home</a></li>
                  <li><a href="#">Learn more</a></li>
                  <li><a href="#">Contact</a></li>
                </ul>
              </nav>
            </div>
          </div>

          <div class="inner cover signup">
			  <h1>Create an account</h1>
				<form action="/user/create" method="POST" role="form">
				  <div class="form-group">
					<label>Name</label>
					<input type="text" class="form-control" name="name" placeholder="Your name">
				  </div>
				  <div class="form-group">
					<label>Email address</label>
					<input type="email" class="form-control" name="email" placeholder="Enter email">
				  </div>					
				  <div class="form-group">
					<label>Password</label>
					<input type="password" class="form-control" name="password" placeholder="Password">
				  </div>
				  <div class="form-group">
					<label>Password confirmation</label>
					<input type="password" class="form-control" name="confirmation" placeholder="Password confirmation">
				  </div>					
				  <button type="submit" class="btn btn-lg btn-success">Create account</button>
				  <input type="hidden" name="_csrf" value="<%= _csrf %>" />	
				</form>
			    <p class="text-muted"><a href="/login">Or Log In if you already have an account</a></p>
          </div>

          <div class="mastfoot">
            <div class="inner">
              <p>Powred by <a href="http://www.cadroctet.com">Cadroctet</a></p>
            </div>
          </div>

        </div>
      </div>
    </div>